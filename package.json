{
  "name": "vpm-listing-generator",
  "version": "1.6.2",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./*": {
      "import": {
        "types": "./dist/*.d.ts",
        "default": "./dist/*.js"
      },
      "require": {
        "types": "./dist/*.d.cts",
        "default": "./dist/*.cjs"
      }
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "ts-patch install && typia patch",
    "prepack": "npm run build",
    "format": "npx @biomejs/biome check . --write",
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "doc": "typedoc"
  },
  "keywords": [
    "vrchat",
    "vpm",
    "vcc"
  ],
  "author": "narazaka",
  "license": "Zlib",
  "description": "VPM (VRChat Package Manager) repository listing JSON generator.",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@ryoppippi/unplugin-typia": "^1.1.0",
    "octokit": "^4.0.3",
    "ts-patch": "^3.3.0",
    "tsup": "^8.3.5",
    "typedoc": "^0.27.6",
    "typescript": "~5.7.2",
    "vitest": "^3.0.3"
  },
  "dependencies": {
    "fetch-retry": "^6.0.0",
    "p-queue": "^8.0.1",
    "typia": "^7.5.1"
  }
}
